- if current_user && current_user != post.user
  %span.author= link_to "@" + post.user.name, :controller => "posts", :action => "index", :username => post.user.name
- elsif current_user && current_user == post.user
  %span.author= link_to "you", :controller => "posts", :action => "index", :username => post.user.name
- elsif !current_user
  %span.author= link_to "@" + post.user.name, :controller => "posts", :action => "index", :username => post.user.name
= link_to post.title, post.link.url

- if post.bookmarked_at
  %span.added_on= post.bookmarked_at.strftime("%d/%m/%Y @ %H:%M")
%span.manage
  - if (current_user && (post.user == current_user))
    = link_to 'e', :controller => "posts", :action => "edit", :id => post.id
    = link_to 'd!', post, :confirm => "Deleting, You sure ?", :method => :delete
  = link_to 'u', post.short_url if post.short_url
- if post.private?
  %span.private P
- if post.tags.size > 0
  %span.tags
    - post.tags.each do |tag|
      = link_to tag, :controller => "posts", :action => "index", :tag => tag.name, :username => post.user.name