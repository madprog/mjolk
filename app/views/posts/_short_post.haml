= link_to post.link.url, post.link.url
%span.description= post.title
%span.added_on= post.bookmarked_at.strftime("%d/%m/%Y @ %H:%M")
%span.manage
  = link_to 'e', :controller => "posts", :action => "edit", :id => post.id
  = link_to 'd!', post, :confirm => "Deleting, You sure ?", :method => :delete
- if post.private?
  %span.private P
- if post.tags.size > 0
  %span.tags
    - post.tags.each do |tag|
      = link_to tag, :action => "index", :tag => tag.name